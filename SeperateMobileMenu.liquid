<style>
ul.sub-menu {
  display: none;
  flex: 0 0 100%;
  border-bottom: 1px solid #000;
  border-top: 1px solid #000;
}

ul.sub-menu li a{
  padding: 10px 40px;
  text-transform: capitalize;
  font-size: 12px;
  padding-right: 0
}

ul.sub-menu li ul.sub-menu li a{
  padding: 10px 60px;
  text-transform: capitalize;
  font-size: 12px;
  padding-right: 0;
  flex: 0 0 100%;
}

ul.sub-menu:last-child {
  border-bottom: none;
}

.main-menu__content{
  display: none;
}

mobile-header ul li{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-bottom: 1px solid #000;
}

mobile-header ul li:last-child{
  border-bottom: none;
}

mobile-header ul li a{
  flex: 0 0 50%;
  padding: 10px 20px;
  text-transform: capitalize;
  font-size: 12px;
}

mobile-header ul li button{
  flex: 0 0 50%;
}

mobile-header{
  position: fixed;
  top: 9%;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 999;
  border: 1px solid #000;
}

mobile-header ul li span {
  padding: 10px;
  font-size: 0px;
}
</style>

<mobile-header>
  <ul>
    {%- for link in section.settings.menu.links -%}
      <li>
        <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
          {{ link.title }}
        </a>
        {%- if link.links != blank -%}<span><svg width="18" height="18" viewBox="0 0 20 20" aria-hidden="true" focusable="false" role="presentation" class="icon"><path d="M20 8.5 12.5 16 5 8.5" stroke="currentColor" stroke-width="1.5" fill="none"></path></svg></span>{% endif %}
        
        {%- if link.links != blank -%}
        
          <ul class="sub-menu">
            {%- for child_link in link.links -%}
              <li>
                <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
                  - {{ child_link.title }}
                </a>
                {%- if child_link.links != blank -%}<span><svg width="18" height="18" viewBox="0 0 20 20" aria-hidden="true" focusable="false" role="presentation" class="icon"><path d="M20 8.5 12.5 16 5 8.5" stroke="currentColor" stroke-width="1.5" fill="none"></path></svg></span>{% endif %}
                {%- if child_link.links != blank -%}
                  <ul class="sub-menu">
                    {%- for grandchild_link in child_link.links -%}
                      <li>
                        <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                          -- {{ grandchild_link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}

      </li>
    {%- endfor -%}
  </ul>
</mobile-header>

<script>
  
$('mobile-header ul li').each(function(){
 $(this).find('span').on('click',function(){
 $(this).siblings('.sub-menu').slideToggle('slow');
});
})

$('mobile-header ul li .sub-menu li').each(function(){
 $(this).find('span').on('click',function(){
 $(this).siblings('.sub-menu').slideToggle('slow');
});
})

setTimeout(function(){
$('mobile-header').hide();
$('.main-menu__toggle').on('click',function(){
 $('mobile-header').slideToggle('fast');
  $('body').removeClass('overflow-hidden');
});
},1000);
  
</script>
